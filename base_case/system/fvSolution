solvers
{
    "rho.*"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       0;
        relTol          0;
    }
    "f.*"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-7;
        relTol          0;
    }

    "(p_rgh|cellDisplacement)"
    {
        // solver          PCG;
        // preconditioner  DIC;
        solver GAMG;
        smoother DICGaussSeidel;
        tolerance       1e-10;
        relTol          0.0;
    }

    p_rghFinal
    {
        $p_rgh;
        relTol          0;
    }

    "(U|h|e|k|phit|epsilon|R|omega)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0.01;
    }

    "(U|h|e|k|phit|epsilon|R|omega)Final"
    {
        $U;
        relTol          0;
    }
